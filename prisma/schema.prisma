generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Books {
  code   String @id
  title  String
  author String
  stock  Int

  borrowedBy   Members? @relation(fields: [borrowedById], references: [code])
  borrowedById String?  @unique

  @@map("books")
}

model Members {
  code         String  @id
  name         String
  penalized    Boolean @default(false)
  borrowedBook Books?

  @@map("members")
}
